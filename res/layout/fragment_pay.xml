<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="充值"
        android:textColor="#4d4d4d"
        android:background="@drawable/icon_pay_top_bg"
        android:textSize="20sp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/icon_pay_type_bg"
        >

        <LinearLayout
            android:id="@+id/viewPayType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/viewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnWiipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微派支付" />

        <Button
            android:id="@+id/btnAlipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付宝支付" />

        <Button
            android:id="@+id/btnUnionpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="银联支付" />
    </LinearLayout>

    <include
        android:id="@+id/notNetWork"
        layout="@layout/common_not_network"
        android:visibility="gone" />

    <include
        android:id="@+id/loadingView"
        layout="@layout/common_loading_layout"
        android:visibility="gone" />

</LinearLayout>