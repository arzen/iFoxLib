<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="login_edittext" parent="android:Widget.EditText">
        <item name="android:background">@drawable/icon_edit_bg</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    
       <style name="pay_edittext" parent="android:Widget.EditText">
        <item name="android:background">@drawable/icon_edit_bg</item>
        <item name="android:padding">8dp</item>
         <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pay_selected_style" parent="android:Widget.TextView">
        <item name="android:background">@drawable/btn_pay_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:textColor">@drawable/btn_pay_color_selector</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="price_item" parent="android:Widget.TextView">
        <item name="android:background">@drawable/btn_pay_common_selector</item>
        <item name="android:drawableRight">@drawable/icon_pro_line</item>
        <item name="android:gravity">center</item>
         <item name="android:layout_width">73dp</item>
        <item name="android:layout_height">33dp</item>
        
        <item name="android:textColor">@drawable/btn_pay_price_color_selector</item>
    </style>
    
    <!-- 支付宝 -->
    
      <style name="AlertDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/popup_bg</item>
    </style>
    
     <style name="pay_tab_style" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
         <item name="android:textColor">@drawable/btn_pay_color_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_pay_selector</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
    </style>
</resources>